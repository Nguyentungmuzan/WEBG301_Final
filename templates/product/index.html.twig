{% extends 'base.html.twig' %}

{% block title %}Product Page{% endblock %}

{% block body %}

		<div class="row">
			<div class="col-1">
				<form action={{ path('product_index') }} method="get">
			</form>
		</div>
		<div class="col-10">
			<div class="container">
				<h4>Product Listing</h4>
				<div class="row row-cols-1 row-cols-md-4 g-4">
					{% for product in products %}
						<div class="col">
							<div class="card h-100">
								<img src=" {{ asset('images/product/' ~ product.imgurl) }}" class="card-img-top" alt="Not Found">
								<div class="card-body">
									<h5 class="card-title">{{ product.Name }}</h5>
									<h6 class="card-subtitle">Category:
										{{ product.category.Name }}</h6>
									<p>Price:
										{{ product.price }} $</p>
								</div>
								<div class="card-footer">
									<a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-primary">Show</a>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>

	<div class="row mt-2">
		<div style="display:flex;text-align:center;justify-content:center">
			<nav aria-label="Page navigation">
						</li>
					</ul>
				</nav>
			</div>
		</div>
	{% endblock %}