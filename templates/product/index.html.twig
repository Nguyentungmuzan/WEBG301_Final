{% extends 'base.html.twig' %}

{% block title %}Product Page{% endblock %}

{% block body %}
	<div class="container-md">
	<h4>Product Listing</h4>
		<div class="colum">
			<div class="col-3">
				<form action={{ path('product_index') }} method="get"></form>
			</div>
		</div>
		<div class="col-9">
			<div class="container">
				<div class="row row-cols-1 row-cols-md-4 g-4">
					{% for product in products %}
						<div class="col">
							<div class="card h-100">
								<img src=" {{ asset('images/product/' ~ product.imgurl) }}" class="card-img-top" alt="Not Found">
								<div class="card-body">
									<h5 class="card-title">{{ product.Name }}</h5>
									<h6 class="card-subtitle">Category:
										{{ product.category.Name }}</h6>
									<p>Price:
										{{ product.price }} $</p>
								</div>
								<div class="card-footer">
									<a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-primary">View</a>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
	<div class="row mt-2">
		<div style="display:flex;text-align:center;justify-content:center">
			<nav aria-label="Page navigation">
				<ul class="pagination">
					</ul>
				</nav>
			</div>
		</div>
	</div>
{% endblock %}