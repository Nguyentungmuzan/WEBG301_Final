{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="{{ asset('images/product/' ~ product.imgurl) }}" alt="{{ product.name }}" class="img-fluid">
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ product.name }}</h1>
                <h2>{{ product.price }} $</h2>
                <hr>
                <p><b>Description: </b>{{ product.description }} </p>
                <form action={{ path('add_cart',{ 'id': product.id }) }} method="get" class="mt-4 p-4 bg-light">
                    <div class="form-group">
                        <label for="quantity">Quantity</label>
				        <input type="number" name="quantity" placeholder="Amount"/>
                    </div>
                    <input type="submit" class="btn btn-warning" value="Add to Cart">
                </form>
                <a href="{{ path('product_index') }}" class="btn btn-warning">Back to list</a>
            
            
            </div>
        </div>
    </div>
{% endblock %}