{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  {% for product in list %}
    <tr>
      <th scope="row">{{product.id}}</th>
      <td>{{product.name}}</td>
      <td>{% if product.category != null %}
                        <a class="text-decoration-none" href="{{path('view_category', {'id': product.category.id})}}">
                           {{ product.category.name }}
                        </a>
                     {% endif %} </td>
      <td>{{ product.price }}</td>
      <td><img src="{{ asset('images/product/'~product.imgurl) }}" width="100" height="120"></td>
      <td>{{ product.description }}</td>
      <td>
      <a href="{{path('crud_product_update',{'id': product.id})}}" class="btn btn-warning">Update</a>
      <a href="{{path('crud_product_delete',{'id': product.id})}}" class="btn btn-danger">Delete</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
    <a href="{{path('crud_product_create')}}" class="btn btn-success">Add new</a>
</table>
    </div>
{% endblock %}
