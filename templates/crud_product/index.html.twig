{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Imgurl</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>
                     {% if product.category != null %}
                        <a class="text-decoration-none" href="{{path('view_category', {'id': product.category.id})}}">
                           {{ product.category.name }}
                        </a>
                     {% endif %} 
                </td>
                <td>{{ product.price }}</td>
                <td>
                        <img src="{{ asset('images/product/'~product.imgurl) }}" width="100" height="120">          
                </td>
                <td>{{ product.description }}</td>
                <td>
                    <a href="{{ path('app_crud_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_crud_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_crud_product_new') }}">Create new</a>
{% endblock %}
