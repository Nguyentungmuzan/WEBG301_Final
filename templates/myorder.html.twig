{% extends "base.html.twig" %}

{% block body %}
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Purchase date</th>
					<th scope="col">Total</th>
				</tr>
			</thead>
			<tbody>
				{% for order in list %}
					<tr>
						<th scope="row">{{order.id}}</th>
						<td>{{ order.purchaseDate | date('d/m/Y')}}</td>
						<td>{{ order.total }}$</td>
						{# <td><img src="{{ asset('images/product/'~product.imgurl) }}" width="100" height="120"></td> #}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}