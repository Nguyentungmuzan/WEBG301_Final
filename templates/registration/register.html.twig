{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="login col-md-4 mx-auto">
		<h1 class="text-center">Register form</h1>
		<form class="needs-validation">
			{{ form_start(registrationForm) }}
			<div class="form-group was-validated form-control">
				<label for="">Email:</label>
				{{ form_widget(registrationForm.email) }}
			</div>
			<div class="form-group was-validated form-control">
				<label for="">Fullname:</label>
				{{ form_widget(registrationForm.userDetail.name) }}
			</div>
			<div class="form-group was-validated form-control">
				<label for="">Telephone:</label>
				{{ form_widget(registrationForm.userDetail.phone) }}
			</div>
			<div class="form-group was-validated form-control">
				<label for="">Address:</label>
				
					{{ form_widget(registrationForm.userDetail.address) }}</div>
			
			<div class="form-group was-validated form-control">
				<label for="">Password:</label>
				{{ form_widget(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
			</div>
			<div class="form-group was-validated form-check">
				<lable>Agree term</lable>
				{{ form_widget(registrationForm.agreeTerms) }}
			</div>

			<input class="btn btn-success w-100 mt-2" type="submit" value="REGISTER">
			{{ form_end(registrationForm) }}
		</form>
	</div>
{% endblock %}
